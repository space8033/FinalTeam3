<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="Out" target="SYSTEM_OUT">
      <PatternLayout pattern="%-5level: %logger{1}.%M() - %msg%n"/>
    </Console>
  </Appenders>

  <Loggers>
    <Logger name="com.finalteam3.exodia" level="info" additivity="false">
      <AppenderRef ref="Out"/>
    </Logger>
    <!-- <Logger name="jdbc.sqlonly" level="info" additivity="false">
      <AppenderRef ref="Out"/>
    </Logger> -->
    <Root level="error">
      <AppenderRef ref="Out"/>
    </Root>
  </Loggers>
</Configuration>